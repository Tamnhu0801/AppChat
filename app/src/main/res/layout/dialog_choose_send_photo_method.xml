<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_camera"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:background="@color/red"
        android:text="Hủy"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <View android:id="@+id/strut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/layout_camera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_alignRight="@id/strut"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/txt_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Chụp ảnh"
            android:textSize="30dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/txt_camera"
            android:background="@color/black"
            android:src="@drawable/ic_camera_150dp"
            android:scaleType="centerCrop"
            android:padding="20dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_gallery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_alignLeft="@id/strut"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/txt_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Thư viện"
            android:textSize="30dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/txt_gallery"
            android:background="@color/black"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_gallery_150dp" />
    </RelativeLayout>

</RelativeLayout>